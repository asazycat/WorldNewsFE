generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id    Int     @id @default(autoincrement())
  name  String
  email String
  newsArticle NewsArticle[]
}


model NewsArticle {
  id        Int     
  title     String
  text      String?
  summary   String
  url       String
  image     String
  video     String
  publish_date  String
  authors   String[]
  category  String
  language  String
  source_country String
  user    User[]    
}